package assignment;

public class Q3 {
    public static void main(String[] args) {
        int totalStudents = 90;
        int totalBoys = 45;

        int totalGradeA = totalStudents / 2;  // 50% of 90
        int boysWithGradeA = 20;

        int girlsWithGradeA = totalGradeA - boysWithGradeA;

        System.out.println("Total number of girls with grade A: " + girlsWithGradeA);
    }
}
